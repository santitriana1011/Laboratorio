@model IEnumerable<Laboratorio.Models.Categoria>

@{
    ViewData["Title"] = "Categoria Cursos";
}

<h2>Index</h2>

<p>
    <a asp-action="Create"><button class="btn btn-primary">Agregar</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaID" class="btn-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoriaID" class="btn btn-warning">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriaID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
